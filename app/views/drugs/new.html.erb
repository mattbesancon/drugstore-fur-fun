<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Create a new drug</h1>

      <%= simple_form_for @drug do |f| %>
        <%= f.input :name %>
        <%= f.input :content %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

